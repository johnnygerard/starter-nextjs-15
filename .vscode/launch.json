{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Start Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: dev",
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/.next/static/chunks"],
      "runtimeArgs": [
        "--auto-open-devtools-for-tabs",
        "--user-data-dir=${userHome}/.config/google-chrome-vscode"
      ]
    }
  ]
}
